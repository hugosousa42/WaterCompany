@{
    ViewBag.Title = "Google Maps API Example";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="container">
    <h2>Our Location on Google Maps</h2>
    <div id="googleMap" style="width:100%;height:400px;"></div>
</div>

@section Scripts {
    <script src="https://maps.googleapis.com/maps/api/js?key=@ViewBag.GoogleMapsApiKey"></script>
    <script>
        function initMap() {
            var mapOptions = {
                center: new google.maps.LatLng(38.736946, -9.142685),
                zoom: 12
            };
            var map = new google.maps.Map(document.getElementById("googleMap"), mapOptions);

            var marker = new google.maps.Marker({
                position: { lat: 38.736946, lng: -9.142685 },
                map: map,
                title: 'Lisbon'
            });
        }

        google.maps.event.addDomListener(window, 'load', initMap);
    </script>
}
