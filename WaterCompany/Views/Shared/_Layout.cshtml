<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Layout</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*     <link rel="stylesheet" href="~/css/site.css" /> *@

    <!--owl slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

    <!-- Bootstrap Datepicker CSS (referenciado via LibMan) -->
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.min.css" />

    <!-- font awesome style -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />

    <!-- Referência ao CSS do Syncfusion -->
    <link href="https://cdn.syncfusion.com/ej2/20.3.47/material.css" rel="stylesheet" />


</head>
<body class="sub_page">

    <div class="hero_area">


        <header class="header_section">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <span>
                            Water Company
                        </span>
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class=""> </span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Service">Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Location">Location</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="WhyUs">Why Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Team">Team</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto">    
                            @if (this.User.Identity.IsAuthenticated)
                            {
                                @if (this.User.IsInRole("Admin"))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Admin</a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="AllAdminUsers">Admin Users</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="AllEmployeeUsers">Employee Users</a></li>                        
                                                    <li><a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Index">Client Users</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Countries" asp-action="Index">Countries and Cities</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="MeterRequests" asp-action="AdminMeterRequest">Meters Requests</a></li>
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="ChangeUser">
                                            <i class="fa fa-user" aria-hidden="true"></i> My settings
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                                            <i class="fa fa-user" aria-hidden="true"></i>Logout
                                        </a>
                                    </li>
                                }
                                else if (this.User.IsInRole("Employee"))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Employee</a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <li>
                                                <a class="dropdown-item" asp-area="" asp-controller="Bills" asp-action="Index">
                                                     Bills
                                                </a>
                                             </li>
                                            <li>
                                                <a class="dropdown-item" asp-area="" asp-controller="MeterRequests" asp-action="EmployeeMeterRequest">
                                                    Meter Requests
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="ChangeUser">
                                            <i class="fa fa-user" aria-hidden="true"></i> My settings
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                                            <i class="fa fa-user" aria-hidden="true"></i>Logout
                                        </a>
                                    </li>
                                }
                                else if (this.User.IsInRole("Client"))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">CLient</a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <li>
                                                <a class="dropdown-item" asp-area="" asp-controller="Bills" asp-action="Index">
                                                    My  Bills
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-area="" asp-controller="MeterRequests" asp-action="Index">
                                                    Request a meter
                                                </a>
                                            </li>
                                        </ul>
                                    </li>                       
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="ChangeUser">
                                            <i class="fa fa-user" aria-hidden="true"></i> My settings
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                                            <i class="fa fa-user" aria-hidden="true"></i>Logout
                                        </a>
                                    </li>
                                }                                                     
                            }
                            else
                            {
                                 <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="MeterRequests" asp-action="Index">
                                        <i class="fa fa-clock-o" aria-hidden="true"></i>Meter Request
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                        <i class="fa fa-user" aria-hidden="true"></i>Login
                                    </a>
                                </li>
                            }
                                                 
                            <form class="form-inline">
                                <button class="btn  my-2 my-sm-0 nav_search-btn" type="submit">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </form>
                        </ul>
                    </div>
                </nav>
            </div>
        </header>
        <!-- end header section -->
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- info section -->

    <section class="info_section layout_padding2">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-3 info_col">
                    <div class="info_contact">
                        <h4>
                            Address
                        </h4>
                        <div class="contact_link_box">
                            <a href="@Url.Action("Location", "Home")">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                    Location
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                    Call +01 1234567890
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>
                                    demo@gmail.com
                                </span>
                            </a>
                        </div>
                    </div>
                    <div class="info_social">
                        <a href="">
                            <i class="fa fa-facebook" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-twitter" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-linkedin" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-instagram" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col">
                    <div class="info_detail">
                        <h4>
                            Info
                        </h4>
                        <p>
                            At Water Company, we are committed to providing innovative and sustainable water solutions.
                        </p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-2 mx-auto info_col">
                    <div class="info_link_box">
                        <h4>
                            Links
                        </h4>
                        <div class="info_links">
                            <a class="@(ViewData["Title"] == "Home" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                            <a class="@(ViewData["Title"] == "About" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="About">
                                About
                            </a>
                            <a class="@(ViewData["Title"] == "Service" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Service">
                                Services
                            </a>
                            <a class="@(ViewData["Title"] == "Why Us" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="WhyUs">
                                Why Us
                            </a>
                            <a class="@(ViewData["Title"] == "Team" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Team">
                                Team
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col ">
                    <h4>
                        Subscribe
                    </h4>
                    <form action="#">
                        <input type="text" placeholder="Enter email" />
                        <button type="submit">
                            Subscribe
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- end info section -->
    <footer class="border-top footer text-muted">
        <div class="container">
            <p>
                &copy; <span id="displayYear"></span> All Rights Reserved By
                <a href="https://html.design/">Free Html Templates</a>
            </p>
        </div>
    </footer>
    </div>

    <!-- jQery -->
    <script type="text/javascript" src="~/js/jquery-3.4.1.min.js"></script>

    <!-- Referência ao JavaScript do Syncfusion -->
    <script src="https://cdn.syncfusion.com/ej2/20.3.47/dist/ej2.min.js"></script>
    <script src="https://cdn.syncfusion.com/ej2/20.3.47/dist/ej2-schedule.min.js"></script>


    <!-- popper js -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <!-- bootstrap js -->
    <script type="text/javascript" src="~/js/bootstrap.js"></script>

    <!-- Bootstrap Datepicker JS (referenciado via LibMan) -->
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>

    <!-- owl slider -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
    </script>
    <!-- custom js -->
    <script type="text/javascript" src="~/js/custom.js"></script>
    <!-- Google Map -->
    <script src="https://cdn.syncfusion.com/ej2/20.3.47/dist/ej2.min.js"></script>
    <script src="https://cdn.syncfusion.com/ej2/20.3.47/dist/ej2-calendars.min.js"></script>
    <!-- End Google Map -->

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyABOEypCQWvcKRBKRbLXtmrLPJjKw47Vu4"></script>


    <!-- Scripts originais -->
    @*     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
