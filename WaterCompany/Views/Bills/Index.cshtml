@model IEnumerable<WaterCompany.Data.Entities.Bill>

@{
    ViewData["Title"] = "Index";
}

<h1>Bills</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Client Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfIssueLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Items.Any())
                    {
                        <p>@item.Items.First().Client.Name</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfIssueLocal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Volume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    <a asp-action="Pay" asp-route-id="@item.id" class="btn btn-info" id="btnDeliver">Pay</a>
                    <a asp-action="DeleteItem" asp-route-id="@item.id" class="btn btn-danger" id="btnDelete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>