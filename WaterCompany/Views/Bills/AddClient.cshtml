@model WaterCompany.Models.AddUserViewModel
@{
    ViewData["Title"] = "AddClient";
}

<br />


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddClient" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>Add Client to bill</h2>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volume" class="control-label"></label>
                <input asp-for="Volume" class="form-control" />
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>

            <br />
            <br />
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

