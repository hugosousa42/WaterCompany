@model IEnumerable<WaterCompany.Data.Entities.BillDetailTemp>
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<p>
    <a asp-action="AddClient" class="btn btn-success">Add Client</a>
    <a asp-action="ConfirmBill" class="btn btn-primary">Confirm Bill</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Client.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Volume)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Value)</td>
                <td>
                    <a asp-action="Increase" asp-route-id="@item.id" class="btn btn-warning"><i class="fa fa-plus"></i></a>
                    <a asp-action="Decrease" asp-route-id="@item.id" class="btn btn-info"><i class="fa fa-minus"></i></a>
                    <a asp-action="DeleteItem" asp-route-id="@item.id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
